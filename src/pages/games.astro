<BaseLayout 
  title="Games Library - 100+ PC & PS5 Titles"
  description="Browse our massive game library: 50+ PC games including Valorant, CS2, League of Legends, GTA V, and 50+ PS5 titles like Spider-Man 2, God of War, FIFA 24 at Cyberpunk Canggu."
  keywords="pc games canggu, ps5 games bali, valorant canggu, cyberpunk 2077 gaming lounge, gaming library bali"
>
  <Navigation />
  
  <main class="pt-20">
    <!-- Header -->
    <section class="section bg-gradient-to-br from-cyber-dark via-cyber-gray to-cyber-dark">
      <div class="container-custom text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">
          Games <span class="text-neon">Library</span>
        </h1>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          Over 100 AAA titles and indie gems across PC and PS5
        </p>
        <div class="flex justify-center space-x-8 mt-8">
          <div>
            <div class="text-4xl font-bold text-neon">{pcGames.length}+</div>
            <div class="text-gray-400">PC Games</div>
          </div>
          <div>
            <div class="text-4xl font-bold text-neon-pink">{ps5Games.length}+</div>
            <div class="text-gray-400">PS5 Games</div>
          </div>
        </div>
      </div>
    </section>

    <!-- PC Games -->
    <section class="section">
      <div class="container-custom">
        <div class="text-center mb-12">
          <h2 class="text-4xl md:text-5xl font-bold mb-4">
            PC <span class="text-neon">Games</span>
          </h2>
          <p class="text-xl text-gray-400">
            From competitive esports to immersive RPGs - we have it all
          </p>
        </div>
        
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4">
          {pcGames.map(game => (
            <div class="card hover:border-cyber-neon-blue transition-colors">
              <div class="text-white font-medium text-sm">{game}</div>
            </div>
          ))}
        </div>
        
        <div class="mt-8 p-6 bg-cyber-gray rounded-lg border border-cyber-neon-blue/30">
          <p class="text-gray-300 text-center">
            <span class="text-cyber-neon-blue font-semibold">Don't see your game?</span> We can install most games on request. Just ask our staff!
          </p>
        </div>
      </div>
    </section>

    <!-- PS5 Games -->
    <section class="section bg-cyber-gray">
      <div class="container-custom">
        <div class="text-center mb-12">
          <h2 class="text-4xl md:text-5xl font-bold mb-4">
            PS5 <span class="text-neon-pink">Games</span>
          </h2>
          <p class="text-xl text-gray-400">
            Exclusive PlayStation titles and the latest releases
          </p>
        </div>
        
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4">
          {ps5Games.map(game => (
            <div class="card hover:border-cyber-neon-pink transition-colors">
              <div class="text-white font-medium text-sm">{game}</div>
            </div>
