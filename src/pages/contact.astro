---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

const whatsappNumber = '+6281234567890';
const whatsappLink = `https://wa.me/${whatsappNumber}`;
const email = 'info@cyberpunkcanggu.com';
const address = 'Canggu, Bali, Indonesia';

const socialLinks = [
  { name: 'Instagram', href: 'https://instagram.com/cyberpunkcanggu', icon: 'instagram' },
  { name: 'TikTok', href: 'https://tiktok.com/@cyberpunkcanggu', icon: 'tiktok' },
  { name: 'Facebook', href: 'https://facebook.com/cyberpunkcanggu', icon: 'facebook' },
];
---

<BaseLayout 
  title="Contact Us - Location, Hours & Booking"
  description="Contact Cyberpunk Canggu: Open 24/7 in Canggu, Bali. Book via WhatsApp, email info@cyberpunkcanggu.com, or visit us. Get directions and reserve your gaming session now."
  keywords="cyberpunk canggu location, gaming lounge canggu address, book gaming pc canggu, contact cyberpunk bali"
>
  <Navigation />
  
  <main class="pt-20">
    <!-- Header -->
    <section class="section bg-gradient-to-br from-cyber-dark via-cyber-gray to-cyber-dark">
      <div class="container-custom text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">
          Get in <span class="text-neon">Touch</span>
        </h1>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          Ready to game? We're here to help 24/7
        </p>
      </div>
    </section>

    <!-- Contact Methods -->
    <section class="section">
      <div class="container-custom">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
          <!-- WhatsApp -->
          <a href={whatsappLink} target="_blank" rel="noopener noreferrer" class="card group cursor-pointer border-2 border-transparent hover:border-cyber-neon-blue">
            <div class="flex justify-center mb-4">
              <svg class="w-16 h-16 text-cyber-neon-blue" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold mb-2 group-hover:text-cyber-neon-blue transition-colors">WhatsApp</h3>
            <p class="text-gray-400 mb-3">Fastest way to book</p>
            <div class="text-cyber-neon-blue font-semibold">{whatsappNumber}</div>
            <div class="mt-4 flex items-center justify-center text-cyber-neon-blue group-hover:translate-x-2 transition-transform">
              <span class="mr-2">Message Us</span>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            </div>
          </a>

          <!-- Email -->
          <a href={`mailto:${email}`} class="card group cursor-pointer border-2 border-transparent hover:border-cyber-neon-blue">
            <div class="flex justify-center mb-4">
              <svg class="w-16 h-16 text-cyber-neon-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold mb-2 group-hover:text-cyber-neon-blue transition-colors">Email</h3>
            <p class="text-gray-400 mb-3">For inquiries</p>
            <div class="text-cyber-neon-blue font-semibold break-all">{email}</div>
            <div class="mt-4 flex items-center justify-center text-cyber-neon-blue group-hover:translate-x-2 transition-transform">
              <span class="mr-2">Send Email</span>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            </div>
          </a>

          <!-- Visit Us -->
          <div class="card border-2 border-transparent hover:border-cyber-neon-blue">
            <div class="flex justify-center mb-4">
              <svg class="w-16 h-16 text-cyber-neon-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold mb-2">Visit Us</h3>
            <p class="text-gray-400 mb-3">Drop by anytime</p>
            <div class="text-white font-semibold">{address}</div>
            <div class="mt-4 text-cyber-neon-pink font-semibold">Open 24/7</div>
          </div>
        </div>

        <!-- Book Now CTA -->
        <div class="text-center">
          <a href={whatsappLink} target="_blank" rel="noopener noreferrer" class="btn-primary text-lg px-12 py-5 inline-flex items-center space-x-3">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
            </svg>
            <span>Book Your Session Now</span>
          </a>
        </div>
      </div>
    </section>

    <!-- Map Section -->
    <section class="section bg-cyber-gray">
      <div class="container-custom">
        <h2 class="text-4xl md:text-5xl font-bold text-center mb-12">
          Find Us on the <span class="text-neon">Map</span>
        </h2>
        
        <div class="aspect-video bg-cyber-gray-light rounded-lg overflow-hidden flex items-center justify-center">
          <div class="text-center">
            <svg class="w-32 h-32 text-gray-600 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
            </svg>
            <p class="text-gray-400">Google Maps integration will be added here</p>
            <p class="text-gray-500 text-sm mt-2">Canggu, Bali, Indonesia</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Hours & Info -->
    <section class="section">
      <div class="container-custom">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
          <!-- Opening Hours -->
          <div class="card">
            <h3 class="text-3xl font-bold mb-6 flex items-center">
              <svg class="w-8 h-8 text-cyber-neon-blue mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Opening Hours
            </h3>
            <div class="space-y-4">
              <div class="flex justify-between items-center pb-4 border-b border-cyber-gray-light">
                <span class="text-gray-300">Monday - Sunday</span>
                <span class="text-cyber-neon-pink font-bold text-xl">24 Hours</span>
              </div>
              <div class="p-4 bg-cyber-neon-blue/10 rounded-lg border border-cyber-neon-blue">
                <p class="text-cyber-neon-blue font-semibold text-center">
                  ðŸŒŸ Open 24/7 - Game Anytime!
                </p>
              </div>
            </div>
          </div>

          <!-- Social Media -->
          <div class="card">
            <h3 class="text-3xl font-bold mb-6 flex items-center">
              <svg class="w-8 h-8 text-cyber-neon-pink mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"></path>
              </svg>
              Follow Us
            </h3>
            <p class="text-gray-400 mb-6">
              Stay updated with our latest gaming events, tournaments, and special offers
            </p>
            <div class="space-y-4">
              {socialLinks.map(social => (
                <a 
                  href={social.href}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center justify-between p-4 bg-cyber-gray-light rounded-lg hover:bg-cyber-gray hover:border-cyber-neon-blue border-2 border-transparent transition-all group"
                >
                  <div class="flex items-center space-x-4">
                    {social.icon === 'instagram' && (
                      <svg class="w-8 h-8 text-cyber-neon-blue" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                      </svg>
                    )}
                    {social.icon === 'tiktok' && (
                      <svg class="w-8 h-8 text-cyber-neon-blue" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/>
                      </svg>
                    )}
                    {social.icon === 'facebook' && (
                      <svg class="w-8 h-8 text-cyber-neon-blue" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                      </svg>
                    )}
                    <span class="text-white font-semibold">{social.name}</span>
                  </div>
                  <svg class="w-5 h-5 text-gray-400 group-hover:text-cyber-neon-blue group-hover:translate-x-2 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                  </svg>
                </a>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
