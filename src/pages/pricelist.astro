---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

const pricing = {
  main: [
    { duration: '1 Hour', price: '50,000', popular: false },
    { duration: '3 Hours', price: '135,000', popular: true },
    { duration: '5 Hours', price: '200,000', popular: false },
    { duration: 'All Day (24h)', price: '350,000', popular: false },
  ],
  vip: [
    { duration: '1 Hour', price: '75,000', popular: false },
    { duration: '3 Hours', price: '200,000', popular: true },
    { duration: '5 Hours', price: '300,000', popular: false },
    { duration: 'All Day (24h)', price: '500,000', popular: false },
  ],
  ps5: [
    { duration: '1 Hour', price: '60,000', popular: false },
    { duration: '3 Hours', price: '160,000', popular: true },
    { duration: '5 Hours', price: '250,000', popular: false },
    { duration: 'All Day (24h)', price: '400,000', popular: false },
  ],
};

const whatsappLink = 'https://wa.me/+6281234567890';
---

<BaseLayout 
  title="Pricelist - Gaming Lounge Hourly Rates & Packages"
  description="Affordable gaming rates at Cyberpunk Canggu. Main Zone from IDR 50k/hour, VIP Zone from 75k/hour, PS5 Rooms from 60k/hour. Book your gaming session now."
  keywords="gaming lounge prices canggu, cyberpunk canggu rates, ps5 rental prices bali, gaming cafe hourly rates"
>
  <Navigation />
  
  <main class="pt-20">
    <!-- Header -->
    <section class="section bg-gradient-to-br from-cyber-dark via-cyber-gray to-cyber-dark">
      <div class="container-custom text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">
          Pricing & <span class="text-neon">Rates</span>
        </h1>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          Transparent pricing for premium gaming experiences
        </p>
      </div>
    </section>

    <!-- Pricing Tables -->
    <section class="section">
      <div class="container-custom">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <!-- Main Zone -->
          <div id="main" class="card">
            <div class="text-center mb-6">
              <div class="text-cyber-neon-blue text-sm font-semibold uppercase tracking-wider mb-2">
                Most Popular
              </div>
              <h2 class="text-3xl font-bold mb-2">Main Zone</h2>
              <p class="text-gray-400">High-performance gaming PCs</p>
            </div>
            
            <div class="space-y-4">
              {pricing.main.map(item => (
                <div class={`p-4 rounded-lg ${item.popular ? 'bg-cyber-neon-blue/10 border-2 border-cyber-neon-blue' : 'bg-cyber-gray-light'}`}>
                  <div class="flex justify-between items-center">
                    <span class="text-white font-medium">{item.duration}</span>
                    <span class="text-2xl font-bold text-cyber-neon-blue">
                      IDR {item.price}
                    </span>
                  </div>
                  {item.popular && (
                    <div class="text-xs text-cyber-neon-blue font-semibold mt-2">BEST VALUE</div>
                  )}
                </div>
              ))}
            </div>
            
            <a href={whatsappLink} target="_blank" rel="noopener noreferrer" class="btn-primary w-full mt-6">
              Book Main Zone
            </a>
          </div>

          <!-- VIP Zone -->
          <div id="vip" class="card border-2 border-cyber-neon-pink">
            <div class="text-center mb-6">
              <div class="text-cyber-neon-pink text-sm font-semibold uppercase tracking-wider mb-2">
                Premium
              </div>
              <h2 class="text-3xl font-bold mb-2">VIP Zone</h2>
              <p class="text-gray-400">Private premium gaming</p>
            </div>
            
            <div class="space-y-4">
              {pricing.vip.map(item => (
                <div class={`p-4 rounded-lg ${item.popular ? 'bg-cyber-neon-pink/10 border-2 border-cyber-neon-pink' : 'bg-cyber-gray-light'}`}>
                  <div class="flex justify-between items-center">
                    <span class="text-white font-medium">{item.duration}</span>
                    <span class="text-2xl font-bold text-cyber-neon-pink">
                      IDR {item.price}
                    </span>
                  </div>
                  {item.popular && (
                    <div class="text-xs text-cyber-neon-pink font-semibold mt-2">BEST VALUE</div>
                  )}
                </div>
              ))}
            </div>
            
            <a href={whatsappLink} target="_blank" rel="noopener noreferrer" class="btn-secondary w-full mt-6">
              Book VIP Zone
            </a>
          </div>

          <!-- PS5 Room -->
          <div id="ps5" class="card">
            <div class="text-center mb-6">
              <div class="text-cyber-purple text-sm font-semibold uppercase tracking-wider mb-2">
                Console Gaming
              </div>
              <h2 class="text-3xl font-bold mb-2">PS5 Room</h2>
              <p class="text-gray-400">Dedicated console gaming</p>
            </div>
            
            <div class="space-y-4">
              {pricing.ps5.map(item => (
                <div class={`p-4 rounded-lg ${item.popular ? 'bg-cyber-purple/10 border-2 border-cyber-purple' : 'bg-cyber-gray-light'}`}>
                  <div class="flex justify-between items-center">
                    <span class="text-white font-medium">{item.duration}</span>
                    <span class="text-2xl font-bold text-cyber-purple">
                      IDR {item.price}
                    </span>
                  </div>
                  {item.popular && (
                    <div class="text-xs text-cyber-purple font-semibold mt-2">BEST VALUE</div>
                  )}
                </div>
              ))}
            </div>
            
            <a href={whatsappLink} target="_blank" rel="noopener noreferrer" class="btn-primary w-full mt-6">
              Book PS5 Room
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Booking Notes -->
    <section class="section bg-cyber-gray">
      <div class="container-custom">
        <h2 class="text-4xl md:text-5xl font-bold text-center mb-12">
          Booking <span class="text-neon">Notes</span>
        </h2>
        
        <div class="max-w-4xl mx-auto space-y-6">
          <div class="card">
            <div class="flex items-start space-x-4">
              <svg class="w-6 h-6 text-cyber-neon-blue flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div>
                <h3 class="text-lg font-semibold mb-2">Advance Booking</h3>
                <p class="text-gray-400">We recommend booking in advance via WhatsApp, especially for VIP Zone and PS5 Rooms during peak hours (evenings and weekends).</p>
              </div>
            </div>
          </div>

          <div class="card">
            <div class="flex items-start space-x-4">
              <svg class="w-6 h-6 text-cyber-neon-blue flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div>
                <h3 class="text-lg font-semibold mb-2">Minimum Session</h3>
                <p class="text-gray-400">Minimum booking is 1 hour. Time starts from when you begin your session.</p>
              </div>
            </div>
          </div>

          <div class="card">
            <div class="flex items-start space-x-4">
              <svg class="w-6 h-6 text-cyber-neon-blue flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
              <div>
                <h3 class="text-lg font-semibold mb-2">Payment</h3>
                <p class="text-gray-400">Cash and digital payments accepted (GoPay, OVO, Bank Transfer). Payment is required before starting your session.</p>
              </div>
            </div>
          </div>

          <div class="card">
            <div class="flex items-start space-x-4">
              <svg class="w-6 h-6 text-cyber-neon-blue flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
              </svg>
              <div>
                <h3 class="text-lg font-semibold mb-2">Group Bookings</h3>
                <p class="text-gray-400">Special rates available for groups of 5+ people. Contact us on WhatsApp for group packages.</p>
              </div>
            </div>
          </div>

          <div class="card">
            <div class="flex items-start space-x-4">
              <svg class="w-6 h-6 text-cyber-neon-blue flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div>
                <h3 class="text-lg font-semibold mb-2">All Inclusive</h3>
                <p class="text-gray-400">All prices include access to our complete game library, high-speed internet, and comfortable AC environment.</p>
              </div>
            </div>
          </div>

          <div class="card border-2 border-cyber-neon-pink">
            <div class="flex items-start space-x-4">
              <svg class="w-6 h-6 text-cyber-neon-pink flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
              </svg>
              <div>
                <h3 class="text-lg font-semibold mb-2 text-cyber-neon-pink">Birthday Packages</h3>
                <p class="text-gray-400">Celebrate your birthday with us! Special packages available for birthday parties. Contact us for details.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="section bg-gradient-to-r from-cyber-purple/20 to-cyber-pink/20">
      <div class="container-custom text-center">
        <h2 class="text-4xl md:text-5xl font-bold mb-6">
          Ready to <span class="text-neon">Book</span>?
        </h2>
        <p class="text-xl text-gray-300 mb-8">
          Reserve your spot now and start gaming on premium hardware
        </p>
        <a href={whatsappLink} target="_blank" rel="noopener noreferrer" class="btn-primary text-lg px-8 py-4 inline-flex items-center space-x-2">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
          </svg>
          <span>Book Now on WhatsApp</span>
        </a>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
